<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textSize="23sp"
        android:id="@+id/tv_food_title"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/tv_food_title"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorPrimary"
        android:id="@+id/viewCol"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recipe"
        android:id="@+id/tv_recipe"
        android:layout_below="@id/viewCol"
        android:textSize="19dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_recipe"
        android:layout_marginLeft="10dp"
        android:text="Minced Chicken rolled and cooked into soft delicious meatballs served with melted cheese makes for a good snack time."
        android:id="@+id/tv_recipe_contents"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ Add Review"
        android:textColor="@color/colorPrimary"
        android:layout_below="@id/tv_recipe_contents"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:id="@+id/tv_add_review"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_add_review"
        android:layout_marginTop="10dp"
        android:id="@+id/list_reviews">


    </ListView>

</RelativeLayout>